{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "default": {},
  "$def": {
    "backends_items": {},
    "backends_config": {},
    "rules_items": {},
    "rules_config": {}
  },
  "patternProperties": {
    ".*": {
      "type": "object",
      "optional": true,
      "additionalProperties": false,
      "properties": {
        "config": {
          "type": "object",
          "default": {
            "app": {
              "root": null
            },
            "tree": {},
            "rules": {}
